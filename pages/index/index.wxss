.lunbo {
  width: 100%;
  height: 150px;
}
.header-title {
  font-size:17px;
  color: black;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height:40px; 
}
.tables {
  width:100%;
  height:33%;
  background: whitesmoke;
}
/* 调整横排列  display: flex;
 flex-direction:row; */
.cell {
  background: white;
  display: flex;
  flex-direction:row;
  height:100px; 
  border-bottom: 1px solid #efefef;
}
.tr {
  height: 5rem;
  margin-top: 10px;
}
/* 调整竖排列  display: flex;
 flex-direction:column; */
.textContent {
 width: 80%; 
 display: flex;
 flex-direction:column;
 margin-top:10px; 
}
.photos {
  width: 80px;
  height: 80px;
  margin-left: 10px;

}
.title {
  color: black;
  font-size: 14px;
  margin-left:10px;
  line-height: 1.3rem; 
}
.price {
  color: red;
  width:70%; 
  font-size: 14px;
  text-align: right;
  margin-top:5px;
  margin-right:10px; 
  line-height: 2rem;  
}
.content {
  color: darkgray;
  font-size: 12px;
  margin-left:10px;
   line-height: 1.3rem; 
}
.goods {
  color: darkgray;
  font-size: 12px;
  margin-left:10px;
  line-height: 1.3rem; 
}
.table-goods {
  width:100%;
  height:100%;
  background: whitesmoke;
}
.goods-tr {
  background: white;
  width: 49%;
  height: 10rem;
  margin-left:5px;
  border-bottom: 1px solid #efefef;
  float: right;
}
.tr2 {
  background: white;
  width: 49%;
  height: 10rem;
  border-bottom: 1px solid #efefef;
}
 .goods-photos {
  width: 90%;
  height: 80%;
  margin-left: 10px;
  margin-top: 5px;
}
.goods-name {
  color: black;
  font-size: 15px;
  margin-left:10px;
} 